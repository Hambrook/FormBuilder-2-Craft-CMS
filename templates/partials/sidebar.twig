<section id="fb-sidebar">
  {% set formsCount = craft.formBuilder2.totalForms() %}
  {% set entriesCount = craft.formBuilder2.totalEntries() %}

  <nav>
    
    <h2>{{ "Menu"|t }}</h2>
    <a href="{{ url('formbuilder2') }}"{% if page == 'Dashboard' %} class="active"{% endif %}>
      <svg><use xlink:href="#icon-layers" class="icon-layers"/></svg>
      {{ "Dashboard"|t }}
    </a>

    <a href="{{ url('formbuilder2/forms') }}"{% if (page == 'Forms' or page == 'Edit Form')  %} class="active"{% endif %}>
      <svg><use xlink:href="#icon-documents" class="icon-documents"/></svg>
      {{ "Forms"|t }}
      <span class="count">{{ formsCount }}</span>
    </a>

    <a href="{{ url('formbuilder2/entries') }}"{% if page == 'Entries' %} class="active"{% endif %}>
      <svg><use xlink:href="#icon-list" class="icon-list"/></svg>
      {{ "Entries"|t }}
      <span class="count">{{ entriesCount }}</span>
    </a>
    
    <h2>{{ "Quick Links"|t }}</h2>
    <a href="{{ url('formbuilder2/forms/new') }}"{% if page == 'New Form' %} class="active"{% endif %}>
      <svg><use xlink:href="#icon-edit" class="icon-edit"/></svg>
      {{ "Create New Form"|t }}
    </a>

    <h2>{{ "Tools"|t }}</h2>
    <a href="{{ url('formbuilder2/tools/exportforms') }}"{% if page == 'Export/Import Forms' %} class="active"{% endif %}>
      <svg><use xlink:href="#icon-export" class="icon-export"/></svg>
      {{ "Export/Import Forms"|t }}
    </a>

    <a href="{{ url('formbuilder2/tools/exportentries') }}"{% if page == 'Export Entries' %} class="active"{% endif %}>
      <svg><use xlink:href="#icon-export" class="icon-export"/></svg>
      {{ "Export Entries"|t }}
    </a>
      
    <h2>{{ "Settings"|t }}</h2>
    <a href="{{ url('formbuilder2/configuration') }}"{% if page == 'Configuration' %} class="active"{% endif %}>
      <svg><use xlink:href="#icon-tools" class="icon-tools"/></svg>
      {{ "Configuration"|t }}
    </a>

  </nav>
</section>