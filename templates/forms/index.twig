{% extends "_layouts/elementindex" %}
{# {% extends "_layouts/cp" %} #}

{% set elementType = 'FormBuilder2_Form' %}

{% if not elementType %}
  {% exit 404 %}
{% endif %}

{% set bodyClass = 'formbuilder fb-forms' %}
{% set page = 'Forms' %}

{# Page Header | Reference craft/app/templates/_layouts/cp.html #}
{% block pageHeader %}
  {# {{ parent() }} #}
  {% include 'formbuilder2/partials/header' %}
{% endblock %}


{# Main Container | Reference craft/app/templates/_layouts/cp.html #}
{% block main %}

  
  {% include 'formbuilder2/partials/sidebar' %} 

  <section id="fb-content">
    {% if formItems|length %}
    <header class="page-header">
      <h1><svg class="icon"><use xlink:href="#icon-documents" class="icon-documents"/></svg> {{ page|t }}</h1>
    </header>
    {% endif %}
    {# Form List #}
    {% if formItems|length %}
    <div class="forms pane">
    
      {{ parent() }}

      {# <table class="data fullwidth collapsible">
        <thead>
          <tr>
            <th scope="col">{{ "ID"|t }}</th>
            <th scope="col">{{ "Name"|t }}</th>
            <th scope="col">{{ "Handle"|t }}</th>
            <th scope="col">{{ "Entries"|t }}</th>
            <th scope="col">{{ "Action"|t }}</th>
          </tr>
        </thead>

        <tbody>
          {% for form in formItems %}
          <tr data-name="{{ form.name }}">
            <td data-title="{{ "ID"|t }}" class="id">{{ form.id }}</td>
            <td data-title="{{ "Name"|t }}" class="name"><a href="{{ url('formbuilder2/forms/' ~ form.id ~ '/edit') }}">{{ form.name }}</a></td>
            <td data-title="{{ "Handle"|t }}" class="handle">
              {{ form.handle }}
            </td>
            <td data-title="{{ "Entries"|t }}" class="count">[45]</td>
            <td data-title="{{ "Action"|t }}" class="action">
              <span data-tooltip="Copy Handle"><svg class="icon copy" data-clipboard-text="{{ form.handle }}"><use xlink:href="#icon-copy" class="icon-copy"/></svg></span>
              <a href="#" class="delete-from delete" title="Delete {{ form.name }}" data-tooltip="Delete Form">
                <svg class="icon"><use xlink:href="#icon-trash" class="icon-trash"/></svg>
              </a>
            </td>
          </tr>
          {% endfor %}
        </tbody>
      </table> #}
    </div>
    
    {% else %}

    {# No Forms #}
    <div class="no-forms">
      <p>{{ "Hello! You don't have any forms yet."|t }}</p>
      <a href="#" class="create-form-button"><svg><use xlink:href="#icon-text" class="icon-text"/></svg> <span>{{ "Create a Form"|t }}</span></a>
    </div>
    {% endif %}

  </section>

{% endblock %}

